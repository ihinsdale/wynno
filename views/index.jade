extends layout

block nav
  .navbar.navbar-fixed-top
    .navbar-inner
      .navContainer
        // .btn-navbar is used as the toggle for collapsed navbar content 
        a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
          span.icon-bar
          span.icon-bar
          span.icon-bar
        // Be sure to leave the brand out there if you want it shown 
        a.brand.pull-left(href='#') wynno
        // Everything you want hidden at 940px or less, place within here 
        .nav-collapse.collapse
          // .nav, .navbar-search, .navbar-form, etc 
          ul.nav.pull-left.wynnoButtons
            li.passing(ng-click='viewPassing()', ng-class='{active: active[0]}')
              a(href='#')
                span.icon-smiley
            li.failing(ng-click='viewFailing()', ng-class='{active: active[1]}')
              a(href='#')
                span.icon-eye-blocked
            li(ng-click='viewSettings()', ng-class='{active: active[2]}')
              a(href='#/settings')
                span.icon-cogs
          ul.nav.pull-right
            li(ng-click='signIn()')
              .signInContainer
                .signIn
                  a(href='')



